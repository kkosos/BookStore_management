<!DOCTYPE html>
<html>
<head>

<link rel="stylesheet" type="text/css" href="/semUI_out/semantic.min.css">
	<link rel = "stylesheet" type = "text/css" href = "/stylesheets/index.css"/> 
	<script src="/jquery/jquery.min.js"></script>
	<script src="/semUI_out/semantic.min.js"></script>
	<script src="/javascripts/main_page.js"></script> 
	
</head>
<body>

	<% var data=id ;%>
<% include side_top_bar%>


<% console.log(input);console.log(error) %>		
<div id="main">
		 <form id="form" class="ui form" action="/users/input_stock" method="POST">
			<div class="three fields">	
					<div class="field one wide"></div>
				  <div class="field five wide">
				    <label>Book_Name</label>
				    <input name="name" placeholder="book_name" type="text"  
                                          <% if(input!=[] &&input.name!="") { %>  value= "<%=input.name %>" <% } %> >
				  </div>
				 <div class="field five wide">
				    <label>Price</label>
				    <input name="price" placeholder="price" type="text"
					 <% if(input!=[] &&input.price!="") { %>  value= "<%=input.price %>" <% } %>	>
				  </div>
				 <div class="field five wide">
				    <label>Date</label>
				    <input name="date" placeholder="date" type="text"
					 <% if(input!=[] &&input.date!="") { %>  value= "<%=input.date %>" <% } %>	>
				  </div>
				<div class="field one wide"></div>
			</div>
			<div class="three fields">	
				<div class="field one wide"></div>
				 <div class="field five wide">
					 <label>Publishment</label>
					 <select class="ui fluid dropdown" name="store">
					
						<option value="">Pulisher</option>
						    <option value="Spring">Spring</option>
						    <option value="Summer">Summer</option>
						    <option value="Fall">Fall</option>
						    <option value="Winter">Winter</option>
					    </select>
				   
				  <!--  <input name="publishment" placeholder="publishment" type="text"
					<% if(input!=[] &&input.publishment!="") { %>  value= "<%=input.publishment %>" <% } %>	> -->
			
				  </div>
				 <div class="field five wide">
					 
					 <label>Store</label>
					      <select class="ui fluid dropdown" name="store">
						<option value="">Store</option>
						    <option value="StoreA">StoreA</option>
						    <option value="StoreB">StoreB</option>
						    <option value="StoreC">StoreC</option>
					     </select>
				   <!--
				    <input name="store" placeholder="store" type="text"
					<% if(input!=[] &&input.store!="") { %>  value= "<%=input.store %>" <% } %>	>
						-->
				  </div>
				 <div class="field five wide">
				    <label>Amount</label>
				    <input name="amount" placeholder="amount" type="text"
					<% if(input!=[] &&input.amount!="") { %>  value= "<%=input.amount %>" <% } %>	>
				  </div>
				<div class="field one wide"></div>
			</div>
			<div class="two fields">	
				<div class="field one wide"></div>
				 <div class="field seven wide">
				    <label>Category</label>
				    <input name="category" placeholder="category" type="text"
					<% if(input!=[] &&input.category!="") { %>  value= "<%=input.category %>" <% } %>>
				  </div>
				 <div class="field seven wide">
				    <label>Language</label>
					  <select class="ui fluid dropdown" name="language">
						<option value="">Language</option>
						    <option value="English">English</option>
						    <option value="Chinese">Chinese</option>

					     </select>
				  <!--  <input name="language" placeholder="language" type="text"
					<% if(input!=[] &&input.language!="") { %>  value= "<%=input.language %>" <% } %>> -->
				  </div>	
				<div class="field one wide"></div>		
			</div>
			<div class="one fields">	
				<div class="field one wide"></div>
				<button class="ui right labeled icon button" type="submit"><i class="right arrow icon"></i>Insert</button>
				<div class="field eleven wide"></div>
				<button class="ui green right labeled icon button" ><i class="right arrow icon"></i>Import</button>
		
			 </div >	
			<div class="ui error message">
			    <div class="header">Action Forbidden</div>
			    <p>You can only sign up for an account once with a given e-mail address.</p>
			  </div>
		</form>
</div>



<script>

$('.ui.form')
  .form({
    fields: {
      name: {
        identifier: 'name',
        rules: [
          {
            type   : 'empty',
            prompt : 'Please enter your name'
          }
        ]
      },/*
      price: {
        identifier: 'price',
        rules: [
          {
            type   : 'regExp[[0-9]]',
            prompt : 'Please enter number'
          }
        ]
      },*//*
      date: {
        identifier: 'date',
        rules: [
          {
            type   : 'regExp[[0-9]/[0-9]/[0-9]]',
            prompt : 'Please enter 1990/01/01'
          }
        ]
      },*//*
      publishment: {
        identifier: 'publishment',
        rules: [
          {
            type   : 'empty',
            prompt : 'Please enter a publishment'
          }
        ]
      },*/
      store: {
        identifier: 'store',
        rules: [
          {
            type   : 'empty',
            prompt : 'Please enter a store'
          }
        ]
      },
      amount: {
        identifier: 'amount',
        rules: [
          {
            type   : 'regExp[[0-9]]',
            prompt : 'Please enter number'
          }
        ]
      },/*
      category: {
        identifier: 'category',
        rules: [
          {
              type   : 'empty',
              prompt : 'Please enter a category'
          }
        ]
      },*/
      language: {
        identifier: 'language',
        rules: [
          {
               type   : 'empty',
               prompt : 'Please enter a language'
          }
        ]
      }
    }
  })
;
	var warn_list=[];
	warn_list= <%- JSON.stringify(results) %> ;
	

</script>
     <script src="/javascripts/warning_list.js"></script> 

</body>
</html> 

